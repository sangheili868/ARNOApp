<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Month Day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_monthday"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="normal|bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="9:00AM-12:00PM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_morningtimes"
            android:textAlignment="textStart"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="24sp" />

        <TextView
            android:text="# Volunteers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_morningvolunteers"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="24sp" />

        <Button
            android:text="Sign Up for Morning Shift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_morningbutton"
            android:layout_margin="10dp"
            android:textSize="20sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="6:00PM-9:00PM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_eveningtimes"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="24sp" />

        <TextView
            android:text="# Volunteers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_eveningvolunteers"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="24sp" />

        <Button
            android:text="Sign Up for Evening Shift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_eveningbutton"
            android:layout_margin="10dp"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>